{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "amd": true,
    "commonjs": true
  },
  "extends": ["eslint:recommended", "plugin:vue/essential"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  },
  "globals": {
    "module": true
  }
}
